<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/mainbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_background" />

    <ImageButton
        android:id="@+id/loginoutButton"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/attendanceButton"
        android:layout_alignRight="@+id/communityButton"
        android:src="@drawable/login" />

    <ImageButton
        android:id="@+id/attendanceButton"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/attendance_button" />

    <ImageButton
        android:id="@+id/communityButton"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_above="@+id/loginoutButton"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/community_button" />

    <ImageButton
        android:id="@+id/majorinformationButton"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/attendanceButton"
        android:layout_alignTop="@+id/communityButton"
        android:src="@drawable/majorinformation_button" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/home1_button"
        android:scaleType="fitXY"
        android:src="@drawable/home1_button" />

    <ImageView
        android:id="@+id/mark"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/homeButton"
        android:layout_alignLeft="@+id/majorinformationButton"
        android:src="@drawable/computerengineering_mark" />

</RelativeLayout>