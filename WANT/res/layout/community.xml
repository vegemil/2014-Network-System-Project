<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/community"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/communitybackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/community_background" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:src="@drawable/home1_button" />

    <ImageView
        android:id="@+id/mark"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/attendanceButton"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:src="@drawable/computerengineering1_mark" />

    <ImageButton
        android:id="@+id/firstgraderButton"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/mark"
        android:layout_alignTop="@+id/communityButton"
        android:src="@drawable/firstgrader_button" />

    <ImageButton
        android:id="@+id/thirdgraderButton"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/majorinformationButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="43dp"
        android:src="@drawable/thirdgrader_button" />

    <ImageButton
        android:id="@+id/fourthgraderButton"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/thirdgraderButton"
        android:src="@drawable/fourthgrader_button" />

    <ImageButton
        android:id="@+id/secondgraderButton"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_above="@+id/thirdgraderButton"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:src="@drawable/secondgrader_button" />

</RelativeLayout>