<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_background" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/imageButton1"
        android:layout_alignRight="@+id/imageButton2"
        android:src="@drawable/login" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/attendance_button" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_above="@+id/imageButton4"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/community_button" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_alignTop="@+id/imageButton2"
        android:src="@drawable/majorinformation_button" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageButton2"
        android:src="@drawable/home_button" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageButton5"
        android:layout_alignLeft="@+id/imageButton3"
        android:src="@drawable/computerengineering_mark" />

</RelativeLayout>