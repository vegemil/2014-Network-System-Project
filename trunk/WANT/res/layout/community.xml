<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/community"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/communitybackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/community_background" />

    <ImageView
        android:id="@+id/mark"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/computerengineering1_mark" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/home1_button"
        android:focusable="false"
        android:scaleType="fitXY"
        android:src="@drawable/home1_button" />

    <ImageButton
        android:id="@+id/firstgraderButton"
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mark"
        android:layout_marginTop="26dp"
        android:background="@drawable/firstgrader_button"
        android:scaleType="fitXY"
        android:src="@drawable/firstgrader_button" />

    <ImageButton
        android:id="@+id/secondgraderButton"
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/firstgraderButton"
        android:background="@drawable/secondgrader_button"
        android:scaleType="fitXY"
        android:src="@drawable/secondgrader_button" />

    <ImageButton
        android:id="@+id/thirdgraderButton"
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/thirdgrader_button"
        android:scaleType="fitXY"
        android:src="@drawable/thirdgrader_button" />

    <ImageButton
        android:id="@+id/fourthgraderButton"
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/thirdgraderButton"
        android:background="@drawable/fourthgrader_button"
        android:scaleType="fitXY"
        android:src="@drawable/fourthgrader_button" />

</RelativeLayout>